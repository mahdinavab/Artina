<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Artina" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

    </style>

    <style name="iran_sans_bold" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/iransansbold</item>
    </style>

    <style name="iran_sans_regular" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/iransansregular</item>
    </style>

    <style name="sans_style_bottom_navigation" parent="@android:style/TextAppearance.Medium">
        <item name="android:fontFamily">@font/sans</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="custom_card_corners_one" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/custom_corners_one</item>
    </style>

    <style name="custom_corners_one" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">@dimen/_6sdp</item>
        <item name="cornerSizeBottomLeft">@dimen/_6sdp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

