    <style name="mainStyle" parent="Theme.Artina">
        <item name="cookieTitleColor">@color/white</item>
        <item name="cookieMessageColor">@color/white</item>
        <item name="cookieActionColor">@color/white</item>
        <item name="cookieBackgroundColor">@color/orangeRed</item>
        <item name="cookiePadding">@dimen/_13sdp</item>
        <item name="cookieTitleSize">@dimen/_14ssp</item>
