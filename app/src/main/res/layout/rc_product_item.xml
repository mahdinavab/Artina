<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="ltr">
    <androidx.cardview.widget.CardView
        android:id="@+id/cadr_main_product"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_45sdp"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/_13sdp"
        app:cardBackgroundColor="@color/orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cadr_select_drug_store"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0.5dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/_13sdp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/cadr_main_product"
        app:layout_constraintStart_toStartOf="@+id/cadr_main_product"
        app:layout_constraintTop_toTopOf="@+id/cadr_main_product"
        app:layout_constraintBottom_toBottomOf="@+id/cadr_main_product"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="@dimen/_71sdp"
        android:layout_height="@dimen/_71sdp"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_minus44sdp"
        app:cardCornerRadius="@dimen/_13sdp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/cadr_main_product"
        app:layout_constraintStart_toEndOf="@+id/cadr_main_product"
        app:layout_constraintTop_toTopOf="@+id/cadr_main_product">

        <ImageView
            android:id="@+id/drug_store_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="@+id/cadr_select_drug_store"
        app:layout_constraintEnd_toStartOf="@+id/cardView3"
        app:layout_constraintStart_toStartOf="@+id/cadr_select_drug_store"
        app:layout_constraintTop_toTopOf="@+id/cadr_select_drug_store">

        <TextView
            android:id="@+id/drug_store_name"
            style="@style/iran_sans_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="آگهی فروش خرمای مضافتی درجه 1"
            android:textColor="@color/black"
            android:textSize="@dimen/_11ssp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/login_to_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_9sdp"
            app:cardElevation="0dp"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            app:cardCornerRadius="@dimen/_3sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/orange">
            <TextView
                android:id="@+id/send_code_text"
                style="@style/iran_sans_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:lineSpacingExtra="5sp"
                android:text="خرمای مضافتی سبک (درجه 1 )"
                android:textColor="@color/white"
                android:textSize="@dimen/_8ssp" />
        </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginEnd="@dimen/_9sdp"
            android:gravity="center">

            <TextView
                android:id="@+id/drug_store_address"
                style="@style/iran_sans_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_2sdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="قیمت : 250,000 تومان"
                android:textColor="#788692"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/icon_drug_store_address"
                />

            <ImageView
                android:id="@+id/icon_drug_store_address"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:src="@drawable/priceicon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginEnd="@dimen/_9sdp"
            android:gravity="center">

            <TextView
                android:id="@+id/drug_storme_address"
                style="@style/iran_sans_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_2sdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="نوع محصول : کارتن 5 کیلویی"
                android:textColor="#788692"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/icon_drug_store_time"
                />
            <ImageView
                android:id="@+id/icon_drug_store_time"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:src="@drawable/producttypeicon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginEnd="@dimen/_9sdp"
            android:gravity="center">

            <TextView
                android:id="@+id/drug_storme_address"
                style="@style/iran_sans_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_2sdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="وزن : 500 کیلوگرم"
                android:textColor="#788692"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/icon_drug_stsore_time"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/icon_drug_stsore_time"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:src="@drawable/weighticon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>