<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="ltr">
    

    <androidx.cardview.widget.CardView
        android:id="@+id/learn_image_card_view"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_76sdp"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/_7sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginVertical="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/learn_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@color/cream"/>

    </androidx.cardview.widget.CardView>

    <TextView
        style="@style/iran_sans_bold"
        android:id="@+id/learn_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:text="دوره مقدماتی دوره اول"
        android:textSize="@dimen/_12ssp"
        android:textColor="#303840"
        app:layout_constraintTop_toTopOf="@id/learn_image_card_view"
        app:layout_constraintEnd_toStartOf="@id/learn_image_card_view"/>



    <LinearLayout
        android:id="@+id/cost_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_9sdp"
        app:layout_constraintTop_toBottomOf="@id/learn_title"
        app:layout_constraintEnd_toStartOf="@id/learn_image_card_view">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.constraintlayout.widget.ConstraintLayout>




        <TextView
            style="@style/iran_sans_bold"
            android:id="@+id/learn_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2500000 تومان"
            android:textSize="@dimen/_11ssp"
            android:textColor="#788692"/>

        <TextView
            style="@style/iran_sans_bold"
            android:id="@+id/cost_one_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_2sdp"
            android:text="قیمت: "
            android:textSize="@dimen/_11ssp"
            android:textColor="#788692"/>

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/costiconofperiod"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/professor_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="@dimen/_9sdp"
        app:layout_constraintTop_toBottomOf="@id/cost_linear_layout"
        app:layout_constraintEnd_toStartOf="@id/learn_image_card_view">




        <TextView
            style="@style/iran_sans_bold"
            android:id="@+id/learn_auther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="محمد سعید فدالدینی"
            android:textSize="@dimen/_11ssp"
            android:textColor="#788692"/>

        <TextView
            style="@style/iran_sans_bold"
            android:id="@+id/professor_one_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_2sdp"
            android:text="استاد: "
            android:textSize="@dimen/_11ssp"
            android:textColor="#788692"/>

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/professoriconofperiod"/>


    </LinearLayout>
    


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:src="@drawable/dividingline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>





</androidx.constraintlayout.widget.ConstraintLayout>