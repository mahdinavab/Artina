<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_280sdp"
        app:cardCornerRadius="@dimen/_20sdp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/police_alarm_card_view"
                android:layout_width="@dimen/_256sdp"
                android:layout_height="@dimen/_83sdp"
                android:layout_marginTop="@dimen/_28sdp"
                app:cardElevation="0dp"
                app:cardCornerRadius="@dimen/_13sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/policealarmcard"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_10sdp">


                    <TextView
                        android:id="@+id/police_alarm_text_view"
                        style="@style/iran_sans_bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="@dimen/_4sdp"
                        android:text="هشدار پلیس و قضایی :"
                        android:textColor="#D44416"
                        android:textSize="@dimen/_11ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <TextView
                        android:id="@+id/police_alarm_description_text_view"
                        style="@style/iran_sans_bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="@dimen/_4sdp"
                        android:text="لطفا پیش از انجام معامله و هر نوع پرداخت از صحت کالا به صورت حضوری اطمینان حاصل نمایید یا از پرداخت درون برنامه استفاده کنید تا ما امنیت معامله ی شما را تامین کنیم."
                        android:maxLines="3"
                        android:textColor="#D44416"
                        android:textSize="@dimen/_11ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/police_alarm_text_view"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/call_card_view"
                android:layout_width="@dimen/_256sdp"
                android:layout_height="@dimen/_35sdp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                app:cardCornerRadius="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_13sdp"
                app:cardElevation="0dp"
                android:layout_marginBottom="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@id/police_alarm_card_view"
                app:layout_constraintEnd_toEndOf="@id/police_alarm_card_view"
                app:layout_constraintStart_toStartOf="@id/police_alarm_card_view">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:background="@drawable/gradient_one"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/call_two_text"
                        style="@style/iran_sans_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="09120565700"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp" />


                    <TextView
                        android:id="@+id/call_one_text"
                        style="@style/iran_sans_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:text="تماس تلفنی با "
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp" />

                    <ImageView
                        android:layout_width="@dimen/_23sdp"
                        android:layout_height="@dimen/_23sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:src="@drawable/callicon" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/massage_card_view"
                android:layout_width="@dimen/_256sdp"
                android:layout_height="@dimen/_35sdp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                app:cardCornerRadius="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_12sdp"
                app:cardElevation="0dp"
                android:layout_marginBottom="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@id/call_card_view"
                app:layout_constraintEnd_toEndOf="@id/police_alarm_card_view"
                app:layout_constraintStart_toStartOf="@id/police_alarm_card_view">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:background="@drawable/gradient_one">

                    <TextView
                        android:id="@+id/massage_two_text"
                        style="@style/iran_sans_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="09120565700"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp" />


                    <TextView
                        android:id="@+id/massage_one_text"
                        style="@style/iran_sans_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:text="ارسال پیامک به "
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp" />

                    <ImageView
                        android:layout_width="@dimen/_23sdp"
                        android:layout_height="@dimen/_23sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/massageicon"/>



                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/chat_card_view"
                android:layout_width="@dimen/_256sdp"
                android:layout_height="@dimen/_35sdp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                app:cardCornerRadius="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_12sdp"
                app:cardElevation="0dp"
                android:layout_marginBottom="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@id/massage_card_view"
                app:layout_constraintEnd_toEndOf="@id/police_alarm_card_view"
                app:layout_constraintStart_toStartOf="@id/police_alarm_card_view">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:background="@drawable/gradient_one"
                    android:gravity="end"
                    android:orientation="horizontal">



                    <TextView
                        android:id="@+id/chat_one_text"
                        style="@style/iran_sans_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:text="گفتگو داخل برنامه"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp" />

                    <ImageView
                        android:layout_width="@dimen/_23sdp"
                        android:layout_height="@dimen/_23sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:src="@drawable/chaticon" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>






    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>