<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/_17sdp"
        app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/question_text_view_two"
                style="@style/iran_sans_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25sdp"
                android:text="2500000"
                android:textColor="#303840"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintEnd_toStartOf="@id/question_text_view_one"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/question_text_view_one"
                style="@style/iran_sans_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:text="آیا مایل هستید برای خرید این دوره مبلغ "
                android:textColor="#303840"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/question_text_view_three"
                style="@style/iran_sans_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25sdp"
                android:text=" تومان از "
                android:textColor="#303840"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintEnd_toStartOf="@id/question_text_view_two"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/question_text_view_four"
                style="@style/iran_sans_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="کیف پول شما کسر شود؟"
                android:textColor="#303840"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintEnd_toEndOf="@id/question_text_view_one"
                app:layout_constraintTop_toBottomOf="@id/question_text_view_one" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_25sdp"
                android:gravity="center_horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/question_text_view_four"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">



                <androidx.cardview.widget.CardView
                    android:id="@+id/no_card_view"
                    android:layout_width="@dimen/_124sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:clickable="true"
                    android:layout_marginEnd="@dimen/_10sdp"
                    app:cardBackgroundColor="#303840"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    app:cardCornerRadius="@dimen/_7sdp"
                    app:cardElevation="0dp">

                    <TextView
                        android:id="@+id/no_text_view"
                        style="@style/iran_sans_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="خیر"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14ssp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/yes_card_view"
                    android:layout_width="@dimen/_124sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:clickable="true"
                    app:cardBackgroundColor="#ed5c45"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    app:cardCornerRadius="@dimen/_7sdp"
                    app:cardElevation="0dp">

                    <TextView
                        android:id="@+id/yes_text_view"
                        style="@style/iran_sans_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="بله"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14ssp" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>