<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr">

    <LinearLayout
        android:id="@+id/title_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_17sdp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/back_card_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/back_card_view">

        <TextView
            android:id="@+id/title_text_view"
            style="@style/iran_sans_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="آگهی فروش خرمای مضافتی درجه 1"
            android:textColor="@color/black"
            android:textSize="@dimen/_15ssp" />

        <TextView
            android:id="@+id/category_title"
            style="@style/iran_sans_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="خرما | مضافتی سبک(درجه یک) | زیر 6 کیلوگرم"
            android:textColor="#303840"
            android:textSize="@dimen/_12ssp" />

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/back_card_view"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_17sdp"
        android:layout_marginTop="@dimen/_13sdp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        app:cardCornerRadius="@dimen/_9sdp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_one">

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/back_image_view"
        android:layout_width="@dimen/_14sdp"
        android:layout_height="@dimen/_14sdp"
        android:src="@drawable/backicon"
        app:layout_constraintBottom_toBottomOf="@id/back_card_view"
        app:layout_constraintEnd_toEndOf="@id/back_card_view"
        app:layout_constraintStart_toStartOf="@id/back_card_view"
        app:layout_constraintTop_toTopOf="@id/back_card_view" />

    <androidx.cardview.widget.CardView
        android:id="@+id/product_card_view"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_273sdp"
        android:layout_marginTop="@dimen/_26sdp"
        app:cardCornerRadius="@dimen/_30sdp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="@id/title_linear_layout"
        app:layout_constraintStart_toStartOf="@id/back_card_view"
        app:layout_constraintTop_toBottomOf="@id/back_card_view">

        <ImageView
            android:id="@+id/product_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/productimage" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_two">


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/favorite_card_view"
        android:layout_width="@dimen/_69sdp"
        android:layout_height="@dimen/_69sdp"
        android:layout_marginEnd="@dimen/_minus22sdp"
        android:layout_marginBottom="@dimen/_minus22sdp"
        app:cardCornerRadius="@dimen/_24sdp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="@id/product_card_view"
        app:layout_constraintEnd_toEndOf="@id/product_card_view">

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_38sdp"
        android:layout_height="@dimen/_38sdp"
        android:layout_marginEnd="@dimen/_14sdp"
        android:layout_marginBottom="@dimen/_14sdp"
        app:cardCornerRadius="@dimen/_20sdp"
        app:layout_constraintBottom_toBottomOf="@id/favorite_card_view"
        app:layout_constraintEnd_toEndOf="@id/favorite_card_view"
        app:layout_constraintStart_toStartOf="@id/favorite_card_view"
        app:layout_constraintTop_toTopOf="@id/favorite_card_view">

        <ImageView
            android:id="@+id/favorite_image_view"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_34sdp"
            android:layout_gravity="center"
            android:src="@drawable/favoriteicon" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@id/product_card_view"
        app:layout_constraintStart_toStartOf="@id/product_card_view">

        <TextView
            android:id="@+id/days_left_text"
            style="@style/iran_sans_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 روز باقی مانده"
            android:textColor="#FFA412"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintBottom_toBottomOf="@id/back_card_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/back_card_view" />

        <ImageView
            android:id="@+id/reminder_time_image_view"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_2sdp"
            android:src="@drawable/remindertimeicon" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/product_info_linear_layout"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@id/product_card_view"
        app:layout_constraintStart_toStartOf="@id/product_card_view"
        app:layout_constraintTop_toBottomOf="@id/favorite_card_view">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_34sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/weighticon" />

            <TextView
                android:id="@+id/product_weight"
                style="@style/iran_sans_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="250"
                android:textColor="#303840"
                android:textSize="@dimen/_13ssp" />

            <TextView
                style="@style/iran_sans_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="کیلوگرم"
                android:textColor="#B77B7B"
                android:textSize="@dimen/_11ssp" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/_60sdp"
            android:layout_gravity="center"
            android:background="#f5dfbb" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_42sdp"
                android:layout_height="@dimen/_26sdp"
                android:src="@drawable/brandicon" />

            <TextView
                android:id="@+id/brand_name"
                style="@style/iran_sans_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="شرکت زرگرزاده"
                android:textColor="#303840"
                android:textSize="@dimen/_13ssp" />


        </LinearLayout>


        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/_60sdp"
            android:layout_gravity="center"
            android:background="#f5dfbb" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/costicon" />

            <TextView
                android:id="@+id/product_price"
                style="@style/iran_sans_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="25,000,000"
                android:textColor="#303840"
                android:textSize="@dimen/_13ssp" />

            <TextView
                style="@style/iran_sans_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تومان"
                android:textColor="#B77B7B"
                android:textSize="@dimen/_11ssp" />

        </LinearLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/description_text_view"
        style="@style/iran_sans_regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:lineSpacingExtra="@dimen/_4sdp"
        android:maxLines="2"
        android:text="لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ و با استفاده از طراحان گرافیک است. چاپگرها و متون بلکه روزنامه و مجله در ستون و"
        android:textColor="#303840"
        android:ellipsize="end"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintEnd_toEndOf="@id/product_info_linear_layout"
        app:layout_constraintStart_toStartOf="@+id/product_info_linear_layout"
        app:layout_constraintTop_toBottomOf="@id/product_info_linear_layout" />


    <TextView
        android:id="@+id/show_more"
        style="@style/iran_sans_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:lineSpacingExtra="@dimen/_4sdp"
        android:maxLines="2"
        android:text="ادامه مطلب..."
        android:textColor="#DE951E"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintEnd_toEndOf="@id/description_text_view"
        app:layout_constraintTop_toBottomOf="@id/description_text_view" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_35sdp"
        app:layout_constraintTop_toBottomOf="@+id/show_more"
        app:layout_constraintEnd_toEndOf="@id/show_more"
        app:layout_constraintStart_toStartOf="@+id/product_info_linear_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/value_card"
                style="@style/custom_card_corners_value"
                android:layout_width="match_parent"
                android:layout_weight="0.3"
                android:layout_height="match_parent"
                app:cardBackgroundColor="#FFF6F6"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toStartOf="@+id/key_card_recycler"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/key_card_recycler"
                style="@style/custom_card_corners_key"
                android:layout_width="match_parent"
                android:layout_weight="0.7"
                android:layout_height="match_parent"
                app:cardBackgroundColor="#FFFBFB"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/value_card"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/attribute_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:clipChildren="true"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/product_card_view"
        app:layout_constraintStart_toStartOf="@id/product_card_view">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_one"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_140sdp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="0dp">


                <TextView
                    android:id="@+id/call_text_view"
                    style="@style/iran_sans_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="تماس با فروشنده"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_13ssp" />


            </androidx.cardview.widget.CardView>


            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:background="#ffffff" />


            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_140sdp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="0dp">


                <TextView
                    android:id="@+id/buy_product_text_view"
                    style="@style/iran_sans_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="خرید محصول"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_13ssp" />


            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>