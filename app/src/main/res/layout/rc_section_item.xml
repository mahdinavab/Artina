<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:id="@+id/section_layout"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    android:layoutDirection="ltr">

    <TextView
        android:id="@+id/section_title"
        style="@style/iran_sans_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/_15sdp"
        android:text="فصل اول"
        android:textColor="#CA8277"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/number_of_part_card_view"
        app:layout_constraintBottom_toBottomOf="@id/number_of_part_card_view"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/number_of_part_card_view"
        android:layout_width="@dimen/_49sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:clickable="true"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        app:cardCornerRadius="@dimen/_7sdp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#303840"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/number_lessons"
            style="@style/iran_sans_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="25 بخش"
            android:textColor="@color/white"
            android:textSize="@dimen/_11ssp" />

    </androidx.cardview.widget.CardView>


    <View
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="#F3F5F6"
        android:layout_marginTop="@dimen/_12sdp"
        app:layout_constraintTop_toBottomOf="@id/number_of_part_card_view"
        app:layout_constraintEnd_toEndOf="@id/section_title"
        app:layout_constraintStart_toStartOf="@id/number_of_part_card_view"/>

</androidx.constraintlayout.widget.ConstraintLayout>