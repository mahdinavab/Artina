<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr">


    <TextView
        android:id="@+id/learn_title_text_view"
        style="@style/iran_sans_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/_20sdp"
        android:text="دوره مقدماتی دوره اول"
        android:textColor="@color/black"
        android:textSize="@dimen/_17ssp"
        app:layout_constraintBottom_toBottomOf="@id/back_card_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/back_card_view" />


    <androidx.cardview.widget.CardView
        android:id="@+id/back_card_view"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_17sdp"
        android:layout_marginTop="@dimen/_13sdp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        app:cardCornerRadius="@dimen/_9sdp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_one">

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/back_image_view"
        android:layout_width="@dimen/_14sdp"
        android:layout_height="@dimen/_14sdp"
        android:src="@drawable/backicon"
        app:layout_constraintBottom_toBottomOf="@id/back_card_view"
        app:layout_constraintEnd_toEndOf="@id/back_card_view"
        app:layout_constraintStart_toStartOf="@id/back_card_view"
        app:layout_constraintTop_toTopOf="@id/back_card_view" />

    <androidx.cardview.widget.CardView
        android:id="@+id/education_image_card_view"
        android:layout_width="@dimen/_83sdp"
        android:layout_height="@dimen/_109sdp"
        android:layout_marginTop="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_9sdp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="@id/learn_title_text_view"
        app:layout_constraintTop_toBottomOf="@id/learn_title_text_view">

        <ImageView
            android:id="@+id/learn_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/number_of_part_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@id/education_image_card_view"
        app:layout_constraintTop_toTopOf="@id/education_image_card_view">


        <TextView
            android:id="@+id/section_number"
            style="@style/iran_sans_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="22"
            android:textColor="#D44416"
            android:textSize="@dimen/_11ssp" />

        <TextView
            android:id="@+id/cost_one_text_view"
            style="@style/iran_sans_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/_10sdp"
            android:text="تعداد بخش ها: "
            android:textColor="#303840"
            android:textSize="@dimen/_11ssp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/background_card_view"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            app:cardCornerRadius="@dimen/_4sdp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_one">

            </LinearLayout>

            <ImageView
                android:id="@+id/background_one_image_view"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_gravity="center"
                android:src="@drawable/particon" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <ImageView
        android:id="@+id/dividing_line"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:src="@drawable/dividingline"
        app:layout_constraintTop_toBottomOf="@id/number_of_part_linear_layout"
        app:layout_constraintStart_toStartOf="@id/back_card_view"
        app:layout_constraintEnd_toEndOf="@id/number_of_part_linear_layout"/>


    <LinearLayout
        android:id="@+id/professor_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@id/education_image_card_view"
        app:layout_constraintTop_toBottomOf="@id/dividing_line">


        <TextView
            android:id="@+id/author_text"
            style="@style/iran_sans_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="محمد سعید فداالدینی"
            android:textColor="#D44416"
            android:textSize="@dimen/_11ssp" />

        <TextView
            android:id="@+id/professor_one_text_view"
            style="@style/iran_sans_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/_10sdp"
            android:text="استاد: "
            android:textColor="#303840"
            android:textSize="@dimen/_11ssp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/background_two_card_view"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            app:cardCornerRadius="@dimen/_4sdp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_one">

            </LinearLayout>

            <ImageView
                android:id="@+id/background_two_image_view"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="center"
                android:src="@drawable/professoriconofperiod"
                app:tint="@color/white" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <ImageView
        android:id="@+id/dividing_line_one"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:src="@drawable/dividingline"
        app:layout_constraintTop_toBottomOf="@id/professor_linear_layout"
        app:layout_constraintStart_toStartOf="@id/back_card_view"
        app:layout_constraintEnd_toEndOf="@id/number_of_part_linear_layout"/>


    <LinearLayout
        android:id="@+id/cost_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@id/education_image_card_view"
        app:layout_constraintTop_toBottomOf="@id/dividing_line_one">


        <TextView
            android:id="@+id/price_text"
            style="@style/iran_sans_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="2500000 تومان"
            android:textColor="#D44416"
            android:textSize="@dimen/_11ssp" />

        <TextView
            android:id="@+id/cost_one_text"
            style="@style/iran_sans_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/_10sdp"
            android:text="قیمت: "
            android:textColor="#303840"
            android:textSize="@dimen/_11ssp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/background_three_card_view"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            app:cardCornerRadius="@dimen/_4sdp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_one">

            </LinearLayout>

            <ImageView
                android:id="@+id/background_three_image_view"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="center"
                android:src="@drawable/costiconofperiod"
                app:tint="@color/white" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <TextView
        android:id="@+id/titles_of_period"
        style="@style/iran_sans_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="سرفصل های دوره"
        android:layout_marginTop="@dimen/_17sdp"
        android:textColor="#303840"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintTop_toBottomOf="@id/education_image_card_view"
        app:layout_constraintEnd_toEndOf="@id/section_card_recycler"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/buttons_bottom"
        android:layout_width="@dimen/_260sdp"
        android:layout_height="@dimen/_44sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        app:cardCornerRadius="@dimen/_14sdp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_one"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_130sdp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="0dp">


                <TextView
                    android:id="@+id/call_text_view"
                    style="@style/iran_sans_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="برداشت از کیف پول"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_13ssp" />


            </androidx.cardview.widget.CardView>


            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:background="#ffffff" />


            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_130sdp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="0dp">


                <TextView
                    android:id="@+id/buy_product_text_view"
                    style="@style/iran_sans_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="خرید مستقیم دوره"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_13ssp" />


            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/section_card_recycler"
        android:layout_width="@dimen/_260sdp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_35sdp"
        app:cardBackgroundColor="#FBF9F9"
        app:cardCornerRadius="@dimen/_14sdp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toTopOf="@+id/buttons_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titles_of_period" >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/section_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:clipChildren="true"
                android:overScrollMode="never"
                android:scrollbars="none"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>